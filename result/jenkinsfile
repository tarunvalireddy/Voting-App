pipeline {
    agent any
    
    environment{
        IMAGE = 'tarun63/result'
        DOCKER_REG = 'DOCKER_CRED'
        GIT_REPO_NAME = "Voting-App"
        GIT_USER_NAME = "tarunvalireddy"
    }

    stages {
       /* stage('checkout') {
            steps {
                git branch : 'main',
                url : 'https://github.com/tarunvalireddy/Voting-App.git'
            }
        }
*/
        stage('Check Changes'){
            steps{
                script{
                sh 'git fetch --depth=2 origin main '
                def changed = sh(script : "git diff --name-only HEAD~1 HEAD | grep '^result/' || true ", returnStdout: true).trim()
                env.changes = changed ? 'true' : 'false'
            
                }
                }
        }
       stage('Build and Push') {
            when{
                expression {env.changes == 'true'}
            }
                    steps {
                        dir ('vote'){
                        script{
                            docker.withRegistry('',DOCKER_REG){
                                def img = docker.build("${IMAGE}:${BUILD_NUMBER}")
                                img.push()
                            }
                                
                            }
                        }
                        }
            stage('Update K8s Deployment') {
                    when {
        expression { env.changes == 'true' }   // <-- Only run when changes exist
    }
                steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config --global user.email "tarunvalireddyy@gmail.com"
                    git config --global user.name "tarunvalireddy"
                    git config --global --add safe.directory /var/lib/jenkins/workspace/Voting-App
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s#tarun63/result:[a-zA-Z0-9._-]*#tarun63/result:${BUILD_NUMBER}#g" k8s-specifications/result-deployment.yaml           
                    git add k8s-specifications/result-deployment.yaml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
            }

}
}
}


